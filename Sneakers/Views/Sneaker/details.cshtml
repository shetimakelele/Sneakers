@model Sneakers.Core.Data.Models.Sneaker


<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>@Model.SneakerName</h2>
            <br />
            <img src="@Model.ImageUrl" class="img-thumbnail" alt="...">
        </div>
        <div class="col-6">
            <p>@Model.LongDescription</p>
            <h3 class="text-right">@Model.Price.ToString("c")</h3>
        </div>
    </div>
</div>

